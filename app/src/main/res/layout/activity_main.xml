<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/kaiping"
    tools:context="com.example.chat_program.MainActivity">

    <TextView
        android:id="@+id/text_jinru"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:layout_marginLeft="270dp"
        android:text="@string/jianjijinru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="40dp"
        android:layout_marginLeft="80dp"
        android:textColor="#ff0000"
        android:textSize="40dp"
        android:text="@string/hao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="40dp"
        android:layout_marginLeft="140dp"
        android:textColor="#ff0000"
        android:textSize="40dp"
        android:text="@string/jiu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="40dp"
        android:layout_marginLeft="190dp"
        android:textColor="#ff0000"
        android:textSize="40dp"
        android:text="@string/bu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="40dp"
        android:layout_marginLeft="240dp"
        android:textColor="#ff0000"
        android:textSize="40dp"
        android:text="@string/jian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
